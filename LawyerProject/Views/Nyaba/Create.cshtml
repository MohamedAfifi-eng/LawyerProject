@model LawyerProject.Models.DB.Nyaba

@{
    ViewData["Title"] = "إضافة نيابة";
}

<h1 class="text-center text-secondary font-monospace">@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NyabaKindId_FK" class="control-label"></label>
                <select asp-for="NyabaKindId_FK" class ="form-control" asp-items="ViewBag.NyabaKindId_FK"></select>
            </div>
            <div class="form-group">
                <label asp-for="CourtId_FK" class="control-label"></label>
                <select asp-for="CourtId_FK" class ="form-control" asp-items="ViewBag.CourtId_FK"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="إضافة" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info" asp-action="Index">النيابات</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
