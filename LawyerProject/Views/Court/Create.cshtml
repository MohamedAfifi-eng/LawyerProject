@model LawyerProject.Models.DB.Court

@{
    ViewData["Title"] = "إضافة محكمة";
}

<h1 class="text-center text-secondary font-monospace">@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discription" class="control-label"></label>
                <input asp-for="Discription" class="form-control" />
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityID_FK" class="control-label"></label>
                <select asp-for="CityID_FK" class="form-select" asp-items="ViewBag.CityID_FK"></select>
            </div>
            <div class="form-group">
                <label asp-for="CourtKindID_FK" class="control-label"></label>
                <select asp-for="CourtKindID_FK" class="form-select" asp-items="ViewBag.CourtKindID_FK"></select>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-outline-info" asp-action="Index">Back to List</a>

            </div>
        </form>
    </div>
</div>

<div class="my-3">
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
