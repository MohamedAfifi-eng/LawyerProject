@model LawyerProject.Models.DB.Court

@{
    ViewData["Title"] = "تعديل بيانات المحكمة";
}

<h1 class="text-center font-monospace text-secondary">@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discription" class="control-label"></label>
                <input asp-for="Discription" class="form-control" />
                <span asp-validation-for="Discription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CityID_FK" class="control-label"></label>
                <select asp-for="CityID_FK" class="form-control" asp-items="ViewBag.CityID_FK"></select>
                <span asp-validation-for="CityID_FK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourtKindID_FK" class="control-label"></label>
                <select asp-for="CourtKindID_FK" class="form-control" asp-items="ViewBag.CourtKindID_FK"></select>
                <span asp-validation-for="CourtKindID_FK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info"  asp-action="Index">المحاكم</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
