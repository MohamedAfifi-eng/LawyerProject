@model LawyerProject.Models.DB.Tawkeel

@{
    ViewData["Title"] = "تعديل التوكيل";
}

<h1 class="text-center text-secondary font-monospace">@ViewData["Title"]</h1>
<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditTawkeel" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaktabTawseekId_FK" class="control-label"></label>
                <select asp-for="MaktabTawseekId_FK" class="form-control" asp-items="ViewBag.MaktabTawseekId_FK"></select>
                <span asp-validation-for="MaktabTawseekId_FK" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label"></label>
                <input class="form-control" type="file" id="formFile" name="file" accept="image/*,.pdf">
            </div>
            <input type="hidden" asp-for="TawkeelPath" />
            <div class="form-group">
                <input type="submit" value="تعديل" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="my-3">
    <a class="btn btn-outline-info" asp-action="Index">التوكيلات</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
