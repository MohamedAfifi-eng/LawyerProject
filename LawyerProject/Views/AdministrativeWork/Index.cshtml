
@model IEnumerable<LawyerProject.Models.DB.AdministrativeWork>

@{
    ViewData["Title"] = "الأعمال الإدارية";
}
<h1 class="text-center text-secondary font-monospace">@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">إضافة عمل إداري جديد</a>
</p>
<table class="text-center table table-bordered table-hover table-striped">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.CreateTime)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.UpdateTime)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.FinishBefor)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.IsFinished)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.AdministrativeWorkKind.Name)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.Case.Name)
            </th>

    
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.UpdateTime)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.FinishBefor)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.IsFinished)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AdministrativeWorkKind.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Case.Name)
            </td>

            <td>
                <a class="btn btn-outline-info mx-1" asp-action="Edit" asp-route-id="@item.Id">تعديل</a> 
                    <a class="btn btn-outline-info mx-1" asp-action="Details" asp-route-id="@item.Id">تفاصيل</a> 
            </td>
        </tr>
}
    </tbody>
</table>

