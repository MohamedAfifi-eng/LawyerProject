


<div class="row row-cols-lg-auto g-3 align-items-center">
  <div class="col-12">
        <label class="visually-hidden" for="ClientSearchSelect">طريقة البحث</label>
        <select class="form-select" id="ClientSearchSelect">
            <option value="0">National Id</option>
            <option value="1">Name</option>
            <option value="3">Id</option>
            <option value="4">Phone</option>
            <option value="5">Address</option>
        </select>
  </div>
    <div class="col-auto">
        <label class="visually-hidden" for="ClientSearchInput">Name</label>
        <input type="text" class="form-control" id="ClientSearchInput" placeholder="بحث">
    </div>
  <div class="col-12">
    <button type="submit" onclick="ClientSearch()" class="btn btn-primary">بحث</button>
  </div>
</div>
<script>
    let ClientSearchSelect = document.getElementById("ClientSearchSelect");
    let Clients=[];
    var UseClientsFunction=null;
    let ClientSearch=()=>{
        fetch(`/Client/Search?SearchOption=${ClientSearchSelect.value}&Searchfor=${ClientSearchInput.value}`)
        .then(response => response.json())
            .then(data => Clients = data)
            .then(() => { if (UseClientsFunction != null) { UseClientsFunction ()} });
    }
    
</script>