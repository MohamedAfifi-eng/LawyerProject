
@model LawyerProject.Models.DB.Case

@{
    ViewData["Title"] = "تفاصيل القضية";
    ViewData["CaseId"] = Model.Id;
}
<h1 class="text-center text-secondary font-monospace">@ViewData["Title"]</h1>

<div>
    <h4>@ViewData["Title"]</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastUpdatedOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastUpdatedOn)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreateOn)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateOn)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CaseSubKind.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CaseSubKind.Name)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dayra.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dayra.Name)
        </dd>

    </dl>
</div>
<div>
    <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@Model?.Id">تعديل</a> 
    <a class="btn btn-outline-info" asp-action="Index">القضايا</a>
</div>

<hr class="my-5" />
<h1 class="text-center font-monospace text-secondary">بيانات إضافية</h1>
<ul class="nav nav-pills mb-3 bg-secondary bg-opacity-10" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="pills-Enimy-tab" data-bs-toggle="pill" data-bs-target="#pills-Enimy" type="button" role="tab" aria-controls="pills-Enimy" aria-selected="true">الخصوم</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-Clients-tab" data-bs-toggle="pill" data-bs-target="#pills-Clients" type="button" role="tab" aria-controls="pills-Clients" aria-selected="true">الموكلين</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-Nyaba-tab" data-bs-toggle="pill" data-bs-target="#pills-Nyaba" type="button" role="tab" aria-controls="pills-Nyaba" aria-selected="false">النيابة</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-Dyra-tab" data-bs-toggle="pill" data-bs-target="#pills-Dyra" type="button" role="tab" aria-controls="pills-Dyra" aria-selected="false">الدائرة</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="pills-Adminstrativework-tab" data-bs-toggle="pill" data-bs-target="#pills-Adminstrativework" type="button" role="tab" aria-controls="pills-Adminstrativework" aria-selected="false">الاعمال الإدارية</button>
    </li>
</ul>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-Enimy" role="tabpanel" aria-labelledby="pills-Enimy-tab" tabindex="0">
        @await Html.PartialAsync("CaseEnemys/_CaseEnemyCreatePartial",new CaseEnemy{ CaseId_FK=Model.Id})
        @await Html.PartialAsync("CaseEnemys/_CaseEnemiesPartial",Model.CaseEnemies)
    </div>
    <div class="tab-pane fade show " id="pills-Clients" role="tabpanel" aria-labelledby="pills-Clients-tab" tabindex="0">
        @await Html.PartialAsync("CaseClients/_CaseClientsCreatePartial",new CaseClient{ CaseId_FK=Model.Id})
        @await Html.PartialAsync("CaseClients/_CaseClientsPartial",Model.CaseClients)
    </div>
    <div class="tab-pane fade" id="pills-Nyaba" role="tabpanel" aria-labelledby="pills-Nyaba-tab" tabindex="0">
        @await Html.PartialAsync("Nyaba/_NyabaDetailsPartial",Model.Dayra.Nyaba)
    </div>
    <div class="tab-pane fade" id="pills-Dyra" role="tabpanel" aria-labelledby="pills-Dyra-tab" tabindex="0">
        @await Html.PartialAsync("Dyra/_DyraDetailsPartial",Model.Dayra)
    </div>
    <div class="tab-pane fade" id="pills-Adminstrativework" role="tabpanel" aria-labelledby="pills-Adminstrativework-tab" tabindex="0">
        @await Html.PartialAsync("AdminstrativeWork/_AdminstrartiveWorkListPartialCreatePartial",new AdministrativeWork{ CaseID_FK=Model.Id})
        @await Html.PartialAsync("AdminstrativeWork/_AdminstrartiveWorkListPartial",Model.AdministrativeWorks)
    </div>
</div>


@section Scripts {
    <script src="~/js/Shared/CasesClients/Create/parial.js"></script>
}