
@model LawyerProject.Models.DB.Case

@{
    ViewData["Title"] = "تعديل بيانات القضية";
}

<h1 class="text-center text-secondary font-monospace">@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />


            <div class="form-group">
                <label asp-for="CaseSubKindId_FK" class="control-label"></label>
                <select asp-for="CaseSubKindId_FK" class="form-control" asp-items="ViewBag.CaseSubKindId_FK"></select>
                <span asp-validation-for="CaseSubKindId_FK" class="text-danger"></span>
            </div>


            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" >
                <label asp-for="IsActive" class="form-check-label" >
                </label>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DayraId_FK" class="control-label"></label>
                <select asp-for="DayraId_FK" class="form-control" asp-items="ViewBag.DayraId_FK"></select>
                <span asp-validation-for="DayraId_FK" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="حفظ" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-info"  asp-action="Index">القضايا</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

